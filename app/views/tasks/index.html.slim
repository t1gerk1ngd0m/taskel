.task-index
  h1.task-index__title
    | タスク一覧
  = flash[:success]
  .task-index__tasks
    - @tasks.each do |task|
      .task-index__task
        p.task-index__task--title
          = task.title
        p.task-index__task--body
          = task.body
        p.task-index__task--deadline
          - if(task.deadline)
            = l(task.deadline, format: :default)
        p.task-index__task--status
          = t task.status_i18n
        p.task-index__task--created_at
          = task.created_at.to_s(:date_time)
        ul.task-index__task--menu
          li.task-index__task--li
            = link_to t('buttons.show'), task_path(task.id), method: :get
          li.task-index__task--li
            = link_to t('buttons.edit'), "/tasks/#{task.id}/edit", method: :get
          li.task-index__task--li.delete
            = link_to t('buttons.delete'), "/tasks/#{task.id}", method: :delete
